<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".fragmentos.UbicacionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerHaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tituapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoblack"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Map fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerHaw"/>

    <!-- Bottom layout -->
    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fondo"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- SOS button -->
        <Button
            android:id="@+id/btnSOS"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red"
            android:text="SOS"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!-- Countdown timer -->
        <VideoView
            android:id="@+id/videoCountdown"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/btnSOS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:visibility="gone" />

        <!-- Cancel button -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/colorSecondary"
            android:text="Cancelar"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- Status icons -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgVerde"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:alpha="1.0"
                android:src="@drawable/ic_circle_green" />

            <ImageView
                android:id="@+id/imgNaranja"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:alpha="0.3"
                android:src="@drawable/ic_circle_orange" />

            <ImageView
                android:id="@+id/imgRojo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:alpha="0.3"
                android:src="@drawable/ic_circle_red" />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>